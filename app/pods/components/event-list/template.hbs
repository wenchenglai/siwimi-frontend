<div class="row browse-main-list">
    <div class="col-xs-12">
        {{#if events}}
            {{#each events as |event|}}
                <div class="row event-list">
                    <div class="col-xs-12 col-sm-12 col-md-2">
                        {{#link-to 'event.detail' event.id}}
                            <img width="200" height="200" class="img-thumbnail img-responsive" src={{event.availableImage}}
                                    onerror="this.src='/assets/images/siwimi/placeholder-events.jpg';">
                        {{/link-to}}
                    </div>
                    <div class="col-xs-12 col-md-4">
                        <ul class="list-group">
                            <li class="list-group-item list-group-item-cys">
                                <h4 class="list-group-item-heading">
                                    {{#link-to 'event.detail' event.id}}{{event.title}}{{/link-to}}
                                </h4>
                            </li>
                            <li class="list-group-item list-group-item-cys">
                                {{#if event.fromAge}}
                                    Age: {{event.fromAge}}
                                    {{#if event.toAge}}
                                        - {{event.toAge}}
                                    {{/if}}
                                {{/if}}
                            </li>
                            <li class="list-group-item list-group-item-cys">
                                {{substring (html2string event.description) 200}}
                            </li>
                        </ul>
                    </div>
                    <div class="col-xs-12 col-md-3">
                        <ul class="list-group">
                            <li class="list-group-item list-group-item-cys">
                                <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
                                {{#if event.address}}
                                    {{event.address}},
                                {{/if}}
                                {{event.cityState}}
                            </li>
                            <li class="list-group-item list-group-item-cys">
                                <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>&nbsp;
                                {{moment-format event.fromDateMoment 'LL'}}

                                {{#if event.toDateMoment}}
                                    - {{moment-format event.toDateMoment 'LL'}}
                                {{/if}}
                            </li>

                            <li class="list-group-item list-group-item-cys">

                                {{#if event.fromTime}}
                                    <span class="glyphicon glyphicon-time" aria-hidden="true"></span>&nbsp;
                                    {{event.fromTime}}

                                    {{#if event.toTime}}
                                        - {{event.toTime}}
                                    {{/if}}
                                {{/if}}
                            </li>
                        </ul>
                    </div>
                    <div class="col-xs-12 col-md-2">
                        {{#if event.types}}
                            {{#each event.types as |type|}}
                                <div class="tag-default">
                                    {{#link-to (query-params type=type) class='btn-link btn-cys-link'}}
                                        {{type}}
                                    {{/link-to}}
                                </div>
                            {{/each}}
                        {{/if}}
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="row">
                <div class="col-xs-12">
                    <p class="lead">There are no events found under the selection criteria.</p>
                    {{#if queryText}}
                        <p>Your search term is {{queryText}}</p>
                    {{/if}}
                </div>
            </div>
        {{/if}}
    </div>
</div>

